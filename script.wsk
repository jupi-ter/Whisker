entity Player {
    float hsp;
    bool moving_right;
    
    on_create {
        self.hsp = 0;
        self.moving_right = true;
    }
    
    on_update {
        if (self.moving_right) {
            self.hsp = 2;
        } else {
            self.hsp = -2;
        }
        transform.x = transform.x + self.hsp;
    }
}